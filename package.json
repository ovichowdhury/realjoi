{
  "name": "@nahidchowdhury/realjoi",
  "version": "1.0.1",
  "description": "Realtime validation hooks for joi validation.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --watchAll --no-cache",
    "start": "rollup -c -w",
    "build": "rollup -c"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "author": "Nahid Chowdhury",
  "license": "MIT",
  "peerDependencies": {
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "jest": "^27.4.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-sass": "^1.2.10",
    "rollup-plugin-typescript2": "^0.31.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "joi": "^17.5.0",
    "prop-types": "^15.8.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ovichowdhury/realjoi.git"
  },
  "bugs": {
    "url": "https://github.com/ovichowdhury/realjoi/issues"
  },
  "homepage": "https://github.com/ovichowdhury/realjoi"
}
